{{#each ideas}}
<div class="card card-body mb-2">
    <h4>{{title}}</h4>
    <p>{{details}}</p>
    <a class="btn btn-dark btn-block mb-3" href="/ideas/edit/{{id}}">Edit</a>
    <form action="/ideas/{{id}}?_method=DELETE" method="post">
        <input type="hidden" name="_method" value="DELETE">
        <input type="submit" class="btn btn-danger btn-block" value="Delete">
    </form>
</div>
{{else}}
<div class="jumbotron text-center bg-transparent">
    <h1 class="display-2">No notes have been saved...</h1>
    <div class="lead mb-5">Save the great ideas you have before you forget.</div>
    <a href="/ideas/add" class="btn btn-dark btn-lg ">Add Your Note</a>
</div>
{{/each}}